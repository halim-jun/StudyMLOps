[flake8]
# 최대 줄 길이
max-line-length = 100

# 무시할 에러 코드 (코드만 나열해야 하며, 주석은 별도 라인에 작성)
ignore =
    E203
    E501
    W503
    W391
    F401
    F403
    F405

# 제외할 파일/폴더
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov

# 최대 복잡도
max-complexity = 10

# 통계 표시
statistics = True

# 카운트 표시
count = True

# 색상 출력
color = auto

# 출력 형식
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s

# show-source 옵션
show-source = True

# show-pep8 옵션
show-pep8 = False 